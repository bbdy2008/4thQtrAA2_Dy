            border-radius: 8px;
        }

        fieldset {
            border: none;
            margin: 0;
            padding: 0;
        }

        legend {
            text-align:center;
            font-family: Verdana;
            font-weight: bold;
            font-size: 25px;
            margin-bottom: 10px;
            color: #1e90ff;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin: 5px 0 15px;
            border: 2px solid #ccc;
            border-radius: 4px;
            font-size: 1em;
            box-sizing: border-box;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #1e90ff;
        }

        button {
            background-color: #1e90ff;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            font-size: 1em;
