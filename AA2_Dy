<body>
    <form id="Signupform" onsubmit="return printUserInfo()">
        <fieldset>
            <legend>Sign Up</legend>
            <label for="pangalan">Name</label>
            <input type="text" name="Name" id="pangalan" onblur="isThereText(this)" onfocus="unblur(this)" required>
            
            <label for="gumagamit">Username</label>
            <input type="text" name="Username" id="gumagamit" onblur="isThereText(this)" onfocus="unblur(this)" required>

            <label for="kasarian">Gender</label>
            <select id="kasarian" name="Gender" onblur="isThereText(this)" onfocus="unblur(this)" required>
                <option value="" disabled selected>Select Gender</option>
                <option>Male</option>
                <option>Female</option>
                <option>Prefer Not To Mention</option>
            </select>
            
            <label for="secret">Password</label>
            <input type="password" name="Password" id="secret" onblur="isThereText(this)" onfocus="unblur(this)" required>

            <label for="mail">Email</label>
            <input type="email" name="Email" id="mail" onblur="isThereText(this)" onfocus="unblur(this)" required>
            
            <label for="bahayko">Address</label>
            <textarea name="Address" id="bahayko" onblur="isThereText(this)" onfocus="unblur(this)" required></textarea>
            
            <label for="interest">User's Interest</label>
            <textarea name="User's Interest" id="interest" onblur="isThereText(this)" onfocus="unblur(this)" required></textarea>
        </fieldset>
        <button id="submit" type="submit">Submit</button>
        <button id="reset" type="reset">Clear The Page</button>
    </form>
    
    <div id="response"></div>

    <script>
        function isThereText(blur) {
            if (blur.value === "") {
                blur.style.borderColor = "red";
            } else {
                blur.style.borderColor = "green";
            }
        }

        function unblur(blur) {
            blur.style.borderColor = "black";
        }

        function printUserInfo() {
            const response = document.getElementById("response");
            const signupQuestions = new FormData(document.getElementById("Signupform"));
            let userInput = "<h2>User Information</h2>";

            signupQuestions.forEach((value, key) => {
                userInput += `<p><b>${key}:</b> ${value}</p>`;
            });
            response.innerHTML = userInput;

            return false;
        }
    </script>
</body>
